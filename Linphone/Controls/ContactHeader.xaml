<UserControl
    x:Class="Linphone.Controls.ContactHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Linphone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" MaxHeight="63">

    <Grid Background="{StaticResource LinphoneColorF}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <local:LinphoneMenuRadioButton x:Name="ContactAllRadioButton" Grid.Column="0"
                                       GroupName="ContactView" d:LayoutOverrides="Width, Height"
                                       DefaultImage="ms-appx:///Assets/Images/contacts_all_default.png"
                                       SelectedImage="ms-appx:///Assets/Images/contacts_all_selected.png"
                                       IsChecked="True"/>
        <local:LinphoneMenuRadioButton x:Name="ContactLinphoneRadioButton" Grid.Column="1"
                                       GroupName="ContactView" d:LayoutOverrides="Width, Height"
                                       DefaultImage="ms-appx:///Assets/Images/contacts_sip_default.png"
                                       SelectedImage="ms-appx:///Assets/Images/contacts_sip_selected.png"/>
        <local:LinphoneMenuButton x:Name="ContactAddButton" Grid.Column="3"
                                  d:LayoutOverrides="Width, Height"
                                  Image="ms-appx:///Assets/Images/contact_add.png"/>
        <local:LinphoneMenuButton x:Name="ContactEditListButton" Grid.Column="4"
                                  d:LayoutOverrides="Width, Height"
                                  Image="ms-appx:///Assets/Images/edit_list.png"/>
    </Grid>
</UserControl>
